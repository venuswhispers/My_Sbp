{
  "name": "sbp",
  "version": "1.0.0",
  "description": "Decentralized sports & event betting platform powered by Ethereum smart contracts and automated market making.",
  "main": "index.js",
  "scripts": {
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "migrate-testnet": "truffle migrate --network testnet",
    "types:ethers": "typechain --target=ethers-v5 './client/src/contract-builds/**/*.json'",
    "types:truffle": "typechain --target=truffle-v5 './client/src/contract-builds/**/*.json'",
    "test": "truffle test",
    "coverage": "truffle run coverage"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "smart contracts",
    "evm",
    "sports betting"
  ],
  "author": "angelle-sw",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "3.3.0-solc-0.7"
  },
  "devDependencies": {
    "@truffle/hdwallet-provider": "^1.2.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@typechain/truffle-v5": "^4.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.13",
    "dotenv": "^8.2.0",
    "solidity-coverage": "^0.7.13",
    "truffle": "^5.1.56",
    "truffle-assertions": "^0.9.2",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  }
